<div class="container m-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Welcome to Image Search <span> </span>
            </h1>
            <p>powered by Pexels API <span class="color"><i class="fas fa-camera-retro"></i></span></p>

            <form action="/api" method="POST">
                <div class="mb-3">
                    <label for="search" class="form-label">Search Images</label>
                    <input type="text" class="form-control" id="search" name="search" value=""
                        aria-describedby="searchQuery">
                    <div id="searchHelp" class="form-text">Enter search string</div>
                    <select class="form-select mt-2" aria-label="Default select" name="select">
                        <option selected>Select Number of Images</option>
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>

    <div class="row m-4">
        <div class="card-group">
            {{#each allImages}}
            <div class="col-sm-4">
                <div class="card">
                    <img src="{{ this.src.medium }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text">Photograph By <a href="{{ this.photographer_url }}">{{
                                this.photographer}}</a>
                        </p>
                        <form action="/api/favorite" method="POST">
                            <input type="hidden" name="photographer" value="{{ this.photographer }}">
                            <input type="hidden" name="photographer_url" value="{{ this.photographer_url }}">
                            <input type="hidden" name="photo_url" value="{{ this.src.medium }}">
                            <button type="submit" class="btn btn-danger "><i class="fas fa-heart"></i></button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each }}
        </div>
    </div>
</div>